{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "exclude": [
    "node_modules",
    "hyperion-explorer",
    "build"
  ]
}
